@article{Verhoeff2015,
    abstract = {The primary objective in military aviation is to optimize operational readiness: the capability to perform assigned flight missions. In terms of a flight planning process, operational readiness has three primary components: availability, serviceability and sustainability. Furthermore, it is influenced by aircraft downtime due to preventive maintenance at prescribed flight time interval. In practice, aircraft flight scheduling (including maintenance constraints) tends to be managed manually and on a day-to-day basis, leading to a reactive approach to aircraft flight hour allocation in which problems with respect to availability, serviceability and sustainability can easily develop. Optimization models have been developed to address this issue, but none of them cover the full scope of operational readiness. This work introduces a flight and maintenance planning optimization model that simultaneously addresses the aspects of availability, serviceability and sustainability, leading to a pro-active, efficient and more robust scheduling effort. The proposed model is tested, verified and validated using Royal Netherlands Air Force data and infrastructure related to the CH47D Chinook helicopter fleet.},
    author = {Verhoeff, M. and Verhagen, W. J C and Curran, R.},
    doi = {10.1016/j.trpro.2015.09.048},
    issn = {23521465},
    journal = {Transportation Research Procedia},
    keywords = {Flight and Maintenance Planning,Operational Readiness,Optimization},
    number = {July},
    pages = {941--950},
    publisher = {Elsevier B.V.},
    title = {{Maximizing operational readiness in military aviation by optimizing flight and maintenance planning}},
    volume = {10},
    year = {2015}
}
@article{Kozanidis2008,
    abstract = {Every aircraft, military or civilian, must be grounded for maintenance after it has completed a certain number of flight hours since its last maintenance check. In this paper, we address the problem of deciding which available aircraft should fly and for how long, and which grounded aircraft should perform maintenance operations, in a group of aircraft that comprise a combat unit. The objective is to achieve maximum availability of the unit over the planning horizon. We develop a multiobjective optimization model for this problem, and we illustrate its application and solution on a real life instance drawn from the Hellenic Air Force. We also propose two heuristic approaches for solving large scale instances of the problem. We conclude with a discussion that gives insight into the behavior of the model and of the heuristics, based on the analysis of the results obtained.},
    author = {Kozanidis, G.},
    isbn = {2042-3195},
    issn = {01976729},
    journal = {Journal of Advanced Transportation},
    keywords = {fleet availability,flight and maintenance planning,military aircraft,multiobjective mixed integer linear,program},
    number = {2},
    pages = {155--182},
    title = {{A Multiobjective Model for Maximizing Fleet Availability under the Presence of Flight and Maintenance Requirements}},
    volume = {43},
    year = {2008}
}
