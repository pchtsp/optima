keywords = {airline applications,crew rostering,crew scheduling},
mendeley-groups = {People},
pages = {223--257},
title = {{Airline Crew Rostering: Problem Types, Modeling, and Optimization}},
url = {https://link.springer.com/content/pdf/10.1023{\%}2FB{\%}3AANOR.0000019091.54417.ca.pdf},
volume = {127},
